<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.digitalhouse.navigationdrawer.FragmentRestaurant">

    <ImageView
        android:id="@+id/image_restaurant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/backgroundTr"
        android:layout_gravity="bottom"
        android:textSize="15sp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/titulo_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/letter"
        android:layout_gravity="bottom"
        android:textSize="20sp"
        android:layout_marginBottom="35dp"
        />
    <TextView
        android:id="@+id/descripcion_restaurant"
        android:layout_width="wrap_content"
        android:textColor="@color/letter"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"/>


</FrameLayout>
